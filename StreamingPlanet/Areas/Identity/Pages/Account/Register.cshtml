@page
@model RegisterModel
@{
    ViewData["Title"] = "Regista-te";
}

<div class="container div-padding" id="container">
    <h1>@ViewData["Title"]</h1>
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h5 class="link">Ao continuar, concordas com a nossa <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>.</h5>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" id="field">
                <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" id="field-round" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating" id="field">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" id="field-round" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" id="field">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" id="field-round" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating" id="field">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" id="field-round" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div id="popover-password">
                            <p><span id="result"></span></p>
                            <div class="progress">
                                <div id="password-strength" 
                                    class="progress-bar" 
                                    role="progressbar" 
                                    aria-valuenow="40" 
                                    aria-valuemin="0" 
                                    aria-valuemax="100" 
                                    style="width:0%">
                                </div>
                            </div>
                            <p>A tua palavra-passe deve ter:</p>
                            <ul class="list-unstyled">
                                <li class="">
                                    <span class="eight-character">
                                        <i class="fas fa-circle" aria-hidden="true"></i>
                                        &nbsp;Pelo menos, 8 caracteres
                                    </span>
                                </li>
                                <li class="">
                                    <span class="low-upper-case">
                                        <i class="fas fa-circle" aria-hidden="true"></i>
                                        &nbsp;Letras maiúsculas e minúsculas
                                    </span>
                                </li>
                                <li class="">
                                    <span class="one-number">
                                        <i class="fas fa-circle" aria-hidden="true"></i>
                                        &nbsp;Números (0-9)
                                    </span> 
                                </li>
                                <li class="">
                                    <span class="one-special-char">
                                        <i class="fas fa-circle" aria-hidden="true"></i>
                                        &nbsp;Caracteres especiais @Html.Raw("(!@#$%^&*)")
                                    </span>
                                </li>
                            </ul>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn-round my-button">Regista-te</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/1c2c2462bf.js" crossorigin="anonymous"></script>
    <script src="~/js/password.js"></script>
    <script src="~/js/register.js"></script>
}
